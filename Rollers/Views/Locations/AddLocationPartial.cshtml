

<div class="modal fade" id="add-new-location-popup" tabindex="-1" role="dialog" aria-labelledby="Add New Location" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" style="background-color:#343a40">
            <div class="modal-header text-light">
                <h5 class="modal-title" id="exampleModalLabel">Add New Location</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div class="modal-body text-light">

                <div id="map"></div>
                <script src="https://maps.googleapis.com/maps/api/js?key=@Model.GoogleApiKey&callback=initAddLocationMap&libraries=&v=weekly"></script>
                
                <form>
                    <div class="row justify-content-center my-3">
                        <div class="col mx-auto">
                            <input type="text" id="addlocation-name-input" class="form-control" placeholder="LocationName">
                        </div>
                        <div class="col mx-auto">
                            <textarea id="addlocation-address-input" class="form-control" placeholder="Address" disabled></textarea>
                        </div>
                    </div>
                    <div class="row justify-content-center my-3">
                        <div class="col mx-auto">
                            <input type="text" id="addlocation-description-input" class="form-control" placeholder="Description">
                        </div>
                    </div>
                </form>
                <div class="form-error-message alert alert-danger" role="alert" id="addlocation-form-error-alert"></div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="addlocation-submit-button" class="btn btn-primary">Add location</button>
            </div>
        </div>
    </div>
</div>

